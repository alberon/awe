# http://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Removed "/" from all paths because it doesn't seem to be working properly :-S
# Docs & templates use 4 spaces since that's what we use for PHP projects
[docs**.md]
indent_size = 4

[templates**.yaml]
indent_size = 4

# Markdown files need trailing whitespace to prevent line folding
[man-src**.md]
trim_trailing_whitespace = false
